{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Run All Tests",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/.bin/playwright",
        "args": ["test"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      },
      {
        "name": "Run Single Test",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/.bin/playwright",
        "args": ["test", "Login.test.ts", "--project=Chrome"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      },
      {
        "name": "Run Parallel Tests",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/.bin/playwright",
        "args": ["test", "--grep", "@Smoke", "--project=Chrome"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      },
      {
        "name": "Run Serial Tests",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/.bin/playwright",
        "args": ["test", "--grep", "@Smoke", "--workers=1", "--project=Chrome"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      },
      {
        "name": "Run UI Tests",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/.bin/playwright",
        "args": ["test", "--grep", "@Smoke", "--ui"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      },
      {
        "name": "Run API Tests",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/.bin/playwright",
        "args": ["test", "--grep", "@API", "--workers=1", "--project=Chrome"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      },
      {
        "name": "Run DB Tests",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/.bin/playwright",
        "args": ["test", "DB.test.ts", "--project=DB"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      },
      {
        "name": "Run Visual Tests",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/.bin/playwright",
        "args": ["test", "visualComparision.test.ts", "--project=Chrome"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      },
      {
        "name": "Run Device Tests",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/.bin/playwright",
        "args": ["test", "Emulation.test.ts", "--project=Device"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      },
      {
        "name": "Run Accessibility Tests",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/node_modules/.bin/playwright",
        "args": ["test", "Axe.test.ts", "--project=Chrome"],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen"
      }
    ]
  }
  